{
  "name": "jia-portfolio-bot",
  "version": "1.0.0",
  "description": "AI Assistant JIA for Portfolio - Powered by Groq",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:css": "tailwindcss -i ./src/styles/input.css -o ./public/css/styles.css --watch",
    "build": "npm run build:css && npm run build:widget && npm run minify",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/css/styles.css --minify",
    "build:widget": "echo 'Widget built successfully'",
    "minify": "npx terser public/alfred-widget.js -c -m -o public/alfred-widget.min.js && npx terser alfred-widget.js -c -m -o alfred-widget.min.js && npx terser public/js/app.js -c -m -o public/js/app.min.js",
    "vercel-build": "npm run build"
  },
  "keywords": [
    "ai",
    "chatbot",
    "portfolio",
    "groq",
    "assistant"
  ],
  "author": "Jeeva",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.2.0",
    "groq-sdk": "^0.7.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "socket.io": "^4.7.4",
    "terser": "^5.36.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6"
  }
}
